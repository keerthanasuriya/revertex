 
    class Program
    {
        static void Main(string[] args)
        {
            int i;
            Console.Write("Enter a Number : ");
            i = Covert.ToInt16(Console.ReadLine());
            if (i % 2 == 0)
            {
			   Console.Write("Entered Number is an even Number going to add 2nd commit");
			   //2nd commit.
                           
            }
            else
            {
			   Console.Write("Entered Number is an odd Number added 2nd commit");
			   //2nd commit.
               
            }
        }
    }
